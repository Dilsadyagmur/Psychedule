@{
    Layout = "_Layout";
}
@{
    ViewData["Title"] = "Psikologları Görüntüle";
}

<h2>Psikologları Görüntüle</h2>
<body>
    <div>
    <table id="psychologistTable" class="table table-striped">
        <thead>
            <tr>
                <th>Ad</th>
                <th>Email</th>
                <th>Randevu Al</th>
            </tr>
        </thead>
        <tbody>
            <!-- İçerik AJAX ile doldurulacak -->
        </tbody>
    </table>
</div>

<!-- Modal -->
<div class="modal fade" id="appointmentModal" tabindex="-1" aria-labelledby="appointmentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="appointmentModalLabel">Randevu Al</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="appointmentForm">
                    <input type="hidden" id="psychologistId" name="psychologistId" />
                    <div class="mb-3">
                        <label for="appointmentDate" class="form-label">Tarih:</label>
                        <input type="date" id="appointmentDate" class="form-control" required />
                    </div>
                    <div id="timeSlotsContainer">
                        <!-- Saat dilimleri burada görünecek -->
                    </div>
                    <button type="submit" class="btn btn-primary">Randevu Oluştur</button>
                </form>
            </div>
        </div>
    </div>
</div>
</body>


@section Scripts {
    <script src="~/js/jqueryreq.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
    <link href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <script src="~/js/appointment.js"></script>
   
}
